<?xml version='1.0' encoding='UTF-8'?>
<operator xmlns="http://wirecloud.conwet.fi.upm.es/ns/macdescription/1" vendor="Conwet" name="jira-harvester" version="0.1.8">
    <details>
        <title>Jira harvester operator</title>
        <homepage>https://repo.conwet.fi.upm.es/wirecloud/agile-dashboards</homepage>
        <authors>Alejandro Rodriguez &lt;alex.rodriguez@conwet.com&gt;</authors>
        <email>alex.rodriguez@conwet.com</email>
        <image></image>
        <smartphoneimage></smartphoneimage>
        <description>Jira data harvester</description>
        <longdescription>DESCRIPTION.md</longdescription>
        <changelog>doc/changelog.md</changelog>
        <doc>doc/index.md</doc>
        <license>MIT</license>
        <issuetracker></issuetracker>
    </details>

    
    <preferences>
        <preference name="jira-url" label="Jira server URL" type="text" default="https://jira.atlassian.com" />
        <preference name="issue-key" label="Jira issue key" type="text" default="JRA-9" />
        
        <preference name="username" label="Jira username" type="text" default="" />
        <preference name="passwd" label="Jira Password" type="text" default="" />
        <preference name="oauth2-token" label="OAuth2 Token" type="text" default="" />
    </preferences>

    <wiring>
        <outputendpoint name="jira-issue" label="Jira List" description="Data about the target Jira issue" type="text" friendcode="jira-issue" />
    </wiring>

    <scripts>
        <script src="js/main.js"/>
    </scripts>

</operator>
